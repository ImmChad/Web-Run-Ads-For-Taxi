<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:background="@color/black"
        android:visibility="gone"
        android:id="@+id/container_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <VideoView
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <include layout="@layout/custom_control_video"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/black"
        android:visibility="gone"
        android:id="@+id/container_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/ads_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_skip_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/baseline_skip_next_24"
            />
    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_loading"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <ProgressBar
            android:indeterminateTint="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>/
        <TextView
            android:id="@+id/txv_title_loading"
            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check latest ADS media"
            android:textAlignment="center"
            android:textSize="30sp"
            />
    </LinearLayout>
</RelativeLayout>