<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="60px"
    tools:context=".LoginActivity">
    <TextView
        android:fontFamily="@font/yewbbi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App ID"
        android:textColor="@color/red"
        android:textSize="50sp"
        android:textAlignment="center"
        />
    <RelativeLayout
        android:background="@drawable/bg_border_2dp_circle_20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <EditText
            android:layout_alignParentStart="true"
            android:layout_toEndOf="@id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_app_ID"
            android:hint="Enter your App ID"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColorHint="@color/red"

            />
        <Button

            android:layout_margin="0dp"
            android:layout_alignParentEnd="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_submit"
            android:text="Submit"
            android:textSize="25sp"
            android:backgroundTint="@color/red"
            android:background="@drawable/bg_red_circle_20dp"
            />
    </RelativeLayout>



</LinearLayout>